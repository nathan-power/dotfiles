{
  // Window settings
  "window.title": "${rootName}",
  "window.zoomPerWindow": false,
  "window.density.editorTabHeight": "compact",
  "window.commandCenter": false,
  "window.autoDetectColorScheme": true,

  // Editor settings
  "editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit" },
  "editor.minimap.enabled": false,
  "editor.fontSize": 14,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.mouseWheelScrollSensitivity": 10,
  "editor.formatOnSave": true,
  "editor.hover.delay": 450,
  "editor.fontFamily": "'Fira Code'",
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.tabSize": 2,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.accessibilitySupport": "off",
  "editor.smoothScrolling": true,

  // Workbench settings
  "workbench.colorCustomizations": {
    "tab.unfocusedActiveBorder": "#000000",
    "editorLineNumber.foreground": "#4f4f4f",
    "editorLineNumber.activeForeground": "#858585",
    "editorGutter.background": "#fff0",
    "editorGroupHeader.tabsBackground": "#fff0",
    "editorIndentGuide.background1": "#fff0",
    "editorIndentGuide.activeBackground1": "#3B3B3B",
    "editorGroup.border": "#fff0",
    "tree.indentGuidesStroke": "#2c4732"
  },
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.sideBar.location": "left",
  "workbench.preferredLightColorTheme": "Atom One Light",
  "workbench.preferredDarkColorTheme": "KanagawaTheme",
  "workbench.colorTheme": "Atom One Light",
  "workbench.list.smoothScrolling": true,
  "workbench.layoutControl.enabled": false,
  "workbench.tree.enableStickyScroll": true,

  // ESlint settings
  "eslint.format.enable": true,
  "eslint.workingDirectories": ["Dir1", "Dir2"],
  "eslint.validate": [
    "typescriptreact",
    "javascriptreact",
    "javascript",
    "javascriptreact",
    "typescript",
    "javascript",
    "javascriptreact",
    "typescriptreact"
  ],

  // File settings
  "files.exclude": { "**/._*": false },
  "files.autoSave": "off",
  "files.autoSaveDelay": 500,

  // Language-specific settings
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[python]": { "editor.formatOnType": true },

  // Terminal settings
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 3,
  "terminal.integrated.scrollback": 5000,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.env.osx": { "FIG_NEW_SESSION": "1" },
  "terminal.integrated.smoothScrolling": true,

  // Vim settings
  "vim.normalModeKeyBindings": [{ "before": ["Y"], "after": ["y", "$"] }],
  "vim.visualModeKeyBindings": [],
  "vim.neovimPath": "/opt/homebrew/Cellar/neovim/0.8.0/bin/nvim",
  "vim.enableNeovim": true,

  // Markdown Preview Enhanced settings
  "markdown-preview-enhanced.previewTheme": "github-dark.css",

  // JavaScript settings
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.inlayHints.parameterNames.enabled": "none",
  "javascript.format.insertSpaceAfterConstructor": true,

  // TypeScript settings
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.format.enable": false,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,

  // Explorer settings
  "explorer.confirmDragAndDrop": false,

  // CodeSnap settings
  "codesnap.realLineNumbers": true,
  "codesnap.target": "window",
  "codesnap.shutterAction": "copy",
  "codesnap.showWindowTitle": true,
  "codesnap.roundedCorners": true,

  // Other settings
  "json.maxItemsComputed": 20000,
  "go.toolsManagement.autoUpdate": true,
  "git.mergeEditor": false,
  "search.exclude": {
    "**/vendor": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/tmp": true,
    "**/android": true,
    "**/.git": true,
    "**/.vscode": true,
    "**/.idea": true,
    "**/.vs": true,
    "**/.vscode-test": true,
    "**/.github": true,
    "**/.next": true,
    "**/.expo": true,
    "**/.expo-shared": true,
    "yarn.lock": true
  },
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  "gopls": {},
  "css.format.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "gitlens.hovers.currentLine.over": "line",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.tokenColorCustomizations": { "textMateRules": [] },
  "accessibility.voice.speechTimeout": 2000,
  "gitlens.gitCommands.closeOnFocusOut": true
}
